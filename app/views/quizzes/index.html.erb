<h1><%= @title %></h1>
<p><%= @description %></p>

<div id="quizzes">
  <% @quizzes.each do |quiz| %>
  <%= render quiz %>
  <p><%= link_to("Show this quiz", quiz, class: 'inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500"') %></p>
  <% end %>
</div>

