<div id="<%= dom_id quiz %>">
  <p>
    <strong>Title:</strong>
    <%= quiz.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= quiz.description %>
  </p>

  <h3>Questions</h3>
  <%= link_to 'Add question', new_quiz_question_path(@quiz) %>
  <ol>
    <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
      <thead class="text-left">
        <tr>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Nosaukums</th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Izveidots</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% quiz.questions.each do |question| %>
          <tr>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">Jautajums</td>

            <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= question.question_text %></td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= format_date question.created_at %></td>

          </tr>

          <% question.answers.each do |answer| %>
            <tr>
              <td class="whitespace-nowrap px-4 py-2 text-gray-700">Atbilde</td>

              <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= answer.answer_text %></td>
              <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= format_date question.created_at %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </ol>
</div>
